<!doctype html>
<html>
<head>
    <title>Kitty Cafe</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&display=swap" rel="stylesheet">
</head>
<body id="profile3">
<div class="container">

    <div class="page-header text-center">
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6 one">
            <div id="one" class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div id="two" class="col-sm-6 two">

          <ul id="first"class="messages">
            <h2>Incoming Orders</h2>
          <% for(var i=0; i<messages.length; i++) {%>
          <% if(messages[i].isCompleted === false) { %>
            <li id="<%= messages[i]._id%>"  class="message">
              <span class="nme"><strong>Name</strong>:<%= messages[i].name %></span>
              <span class="ord"><strong>Order</strong>:<%= messages[i].order %></span>
              <!-- <span class="pig"><%= messages[i].barista %></span> -->
              <!-- <span><%= messages[i].size %></span>
              <span><%= messages[i].regular %></span>
              <span><%= messages[i].mocha %></span>
              <span><%= messages[i].caramel %></span> -->
              <span class="hide"><%= messages[i].isCompleted %></span>
              <span class="tags"><strong>ID#</strong>:<%= messages[i]._id%></span>
              <span class="finish"><i class="fa fa-coffee" aria-hidden="true"></i></span>
              <!-- <span><i class="fa fa-trash" aria-hidden="true"></i></span> -->
            </li>
          <% }} %>
          </ul>
          <ul id="second" class="messages">
            <h2>All Completed Orders</h2>
          <% for(var i=0; i<messages.length; i++) {%>
          <% if(messages[i].isCompleted === true) { %>
            <li id="<%= messages[i]._id%>"  class="message">
              <span class="nme
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><strong>Name</strong>:<%= messages[i].name %></span>
              <span class="ord
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><strong>Order</strong>:<%= messages[i].order %></span>
              <span class="bar
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><strong>Barista</strong>:<%= messages[i].barista %></span>
              <!-- <span><%= messages[i].size %></span>
              <span><%= messages[i].regular %></span>
              <span><%= messages[i].mocha %></span>
              <span><%= messages[i].caramel %></span> -->
              <span class="hide"><%= messages[i].isCompleted %></span>
              <span class="tags
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><strong>ID#</strong>:<%= messages[i]._id%></span>
              <!-- <span class="finish
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><i class="fa fa-coffee" aria-hidden="true"></i></span> -->

            </li>
          <% }} %>
          </ul>
          <ul id="third" class="messages">
            <h2>Your Completed Orders</h2>
          <% for(var i=0; i<messages.length; i++) {%>
          <% if(messages[i].barista == user.local.email) { %>
            <li id="<%= messages[i]._id%>"  class="message">
              <span class="nme
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><strong>Name</strong>:<%= messages[i].name %></span>
              <span class="ord
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><strong>Order</strong>:<%= messages[i].order %></span>
              <!-- <span class="pig
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><%= messages[i].barista %></span> -->
              <!-- <span><%= messages[i].size %></span>
              <span><%= messages[i].regular %></span>
              <span><%= messages[i].mocha %></span>
              <span><%= messages[i].caramel %></span> -->
              <span class="hide"><%= messages[i].isCompleted %></span>
              <span class="tags
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><strong>ID#</strong>:<%= messages[i]._id%></span>
              <!-- <span class="finish
              <% if (messages[i].isCompleted) {%> done <% } %>
              "><i class="fa fa-coffee" aria-hidden="true"></i></span> -->
              <!-- <span><i class="fa fa-trash" aria-hidden="true"></i></span> -->
            </li>
          <% }} %>
          </ul>





</div>

<script src="main.js"></script>

</body>
</html>
